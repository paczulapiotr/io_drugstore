@model MedicalPrescription
@{
    ViewData ["Title"] = "Prescription";
}

<div class="patient-prescription-details panel container">
    <div class="table-header">
        <h1>Szczegóły recepty:</h1>
        <form asp-action="Index" method="get">
            <button class="btn">Powrót</button>
        </form>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Imie i nazwisko</th>
                <td>@Model.Patient.FullName</td>
            </tr>
            <tr>
                <th>Data wypisania</th>
                <td>@Model.CreationTime</td>
            </tr>
            <tr>
                <th>Całkowity koszt</th>
                <th>@Model.Medicines.Sum(m=>m.PricePerOne*m.AssignedQuantity)</th>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            <tr>
                <th>Nazwa</th>
                <th>Cena za sztuke</th>
                <th>Refundacja?</th>
                <th>Kategoria</th>
                <th>Ilość</th>
            </tr>
            @foreach (var p in Model.Medicines)
            {
                <tr>
                    <td>@p.StockMedicine.Name</td>
                    <td>@p.StockMedicine.PricePerOne</td>
                    <td>@p.StockMedicine.IsRefunded</td>
                    <td>@p.StockMedicine.MedicineCategory</td>
                    <td>@p.AssignedQuantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>