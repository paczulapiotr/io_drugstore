@model LoginViewModel
@{ ViewData["LogoutBtnVisibility"] = false; }
@{ ViewData["LogoBtnEnable"] = true; }


<div class="login-panel">
    <div class="left-panel">
        <h1>System zarządzania <span style="display: block;"> apteką </span></h1>
    </div>
    <div class="right-panel">
        <h2>Zaloguj się</h2>
        @*<div class="text-danger" asp-validation-summary="All"></div>*@
        <form asp-action="Login" method="post">
            <div class="form-group">
                <div><span asp-validation-for="Email" class="text-danger"></span></div>
                <label asp-for="Email">Login</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
                <label asp-for="Password">Hasło</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <button class="btn" type="submit">Zaloguj</button>
        </form>
    </div>
</div>
