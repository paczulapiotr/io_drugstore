@model PrescriptionViewModel
@{
    ViewData["Title"] = "Edit Prescription";
}

<div class="edit-prescription">
    <div class="edited-prescription-panel">
        <div class="table-header">
            <h1>Prescription Details:</h1>
            <form asp-action="Prescriptions" method="get">
                <button class="btn">Powrót</button>
            </form>
            <div>
                <button id="save-button" value="@Model.Id" class="btn">Zapisz</button>
            </div>
        </div>
        <table class="table patientInfo">
            <tbody>
                <tr>
                    <th>Imie i nazwisko</th>
                    <td>@Model.PatientId</td>
                </tr>
                <tr>
                    <th>Data wypisania</th>
                    <td>@Model.CreationTime</td>
                </tr>
                <tr>
                    <th>Zatwierdzona?</th>
                    <td>@ContentHelper.VerificationToString(Model.VerificationState)</td>
                </tr>
            </tbody>
        </table>

        <table class="table assigned-medicines">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Cena za sztuke</th>
                    <th>Refundacja?</th>
                    <th>Ilość</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>



    <div class="medicine-search-panel">
        <h1>Wybierz leki:</h1>
        <div class="search-bar">
            <input class="form-control" name="search" />
            <button class="btn">Znajdź</button>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Is refunded</th>
                    <th>Quantity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>

        </table>
    </div>
</div>
<script src="~/js/Doctor/EditPrescription.js"></script>
<script>

</script>