@model MedicalPrescription
@{
    ViewData["Title"] = "Edit Prescription";
}

<div class="editPrescription">
    <div class="editedPrescriptionPanel">
        <div class="tableHeader">
            <h1>Prescription Details:</h1>
            <form asp-action="Prescriptions" method="get">
                <button class="btn">Powrót</button>
            </form>
            <div>
                <button id="saveButton" value="@Model.ID" class="btn">Zapisz</button>
            </div>
        </div>
        <table class="table patientInfo">
            <tbody>
                <tr>
                    <th>Imie i nazwisko</th>
                    <td>@(Model.Patient.FirstName + " " + Model.Patient.SecondName)</td>
                </tr>
                <tr>
                    <th>Data wypisania</th>
                    <td>@Model.CreationTime</td>
                </tr>
                <tr>
                    <th>Zatwierdzona?</th>
                    <td>@Model.Approved</td>
                </tr>
            </tbody>
        </table>

        <table class="table assignedMedicines">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Cena za sztuke</th>
                    <th>Refundacja?</th>
                    <th>Ilość</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>



    <div class="medicineSearchPanel">
        <h1>Wybierz leki:</h1>
        <div class="searchBar">
            <input class="form-control" name="search" />
            <button class="btn">Znajdź</button>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Is refunded</th>
                    <th>Quantity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>

        </table>
    </div>
</div>
<script src="~/js/Doctor//EditPrescription.js"></script>