@model PrescriptionViewModel
@{
    ViewData["Title"] = "Prescription";
}

<div class="prescription container panel">
    <div class="table-header">
        <h1>Prescription Details:</h1>
        <div class="buttons">
            <form asp-action="Prescriptions" method="get">
                <button class="btn">Powrót</button>
            </form>

            @if (Model.VerificationState != VerificationState.Accepted)
            {
                <form asp-action="EditPrescription" method="get">
                    <input type="hidden" name="prescriptionId" value="@Model.Id" />
                    <button class="btn">Edytuj</button>
                </form>
                <form asp-action="DeletePrescription" method="post">
                    <input type="hidden" name="prescriptionId" value="@Model.Id" />
                    <button class="btn">Usuń</button>
                </form>
            }
        </div>
    </div>
   @await Html.PartialAsync("_PrescriptionTable", Model)
</div>