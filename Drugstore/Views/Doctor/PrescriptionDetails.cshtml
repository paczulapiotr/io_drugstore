@model MedicalPrescription
@{ 
    ViewData ["Title"] = "Recepta";
}

<div class="prescriptionDetailsPanel">
    <div class="tableHeader">
    <h2>Szczegóły recepty:</h2>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Data wystawienia</th>
                <td>@Model.CreationTime.ToLongDateString()</td>
            </tr>
            <tr>
                <th>Kto wystawił?</th>
                <td>@Model.Doctor.FullName</td>
            </tr>
            <tr>
                <th>Została zatwierdzona?</th>
                <td>@Model.Approved</td>
            </tr>
            <tr>
                <th>Nazwa leku</th>
                <th>Ilość</th>
                <th>Cena za sztukę</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medicine in Model.Medicines)
            {
            <tr>
                <td>@medicine.StockMedicine.Name</td>
                <td>@medicine.AssignedQuantity</td>
                <td>@medicine.StockMedicine.PricePerOne</td>
            </tr>
            }
        </tbody>
    </table>
    <div class="tableFooter">
        <form asp-action="TreatmentHistory" method="get">
            <input value="@Model.Patient.ID" name="patientId" type="hidden" />
            <button class="btn">Powrót</button>
        </form>
    </div>


</div>