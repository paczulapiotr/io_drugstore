@model ICollection<Department>
@{
    ViewData["Title"] = "Departments";
}

<div class="container departments">
    <div class="table-header">
        <h1>Current departments:</h1>
        <form id="add-department" asp-action="add-department" method="Get">
            <button class="btn">Add Department</button>
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        @foreach (var department in Model)
        {
        <tr>
            <td>@department.ID</td>
            <td>@department.Name</td>
            <td>
                <form action="EditDepartment" method="get">
                    <input value="@department.ID" name="departmentId" type="hidden" />
                    <Button class="btn">Edit</Button>
                </form>
            </td>
            <td>
                <form action="DeleteDepartment" method="post">
                    <input value="@department.ID" name="departmentId" type="hidden" />
                    <Button class="btn">Delete</Button>
                </form>
            </td>
        </tr>

        }
    </table>
    <form action="Index" method="get">
        <button class="btn">Powrót</button>
    </form>
</div>