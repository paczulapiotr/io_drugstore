@model Department
@{
    ViewData["Title"] = "New Department";
}

<div class="add-department container panel">
    <form action="AddDepartment" method="post">
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <div><span asp-validation-for="Name" class="text-danger"></span></div>
            <label asp-for="Name"><strong>Nazwa oddziału:</strong></label>
            <input class="form-control" type="text" asp-for="Name" />
        </div>
        <button class="btn add-department-button">Dodaj</button>
    </form>
    <form action="Departments" method="get">
        <button class="btn">Powrót</button>
    </form>
</div>