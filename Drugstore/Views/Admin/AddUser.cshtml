@model UserModifyData
@{
    ViewData["Title"] = "Add User";
}

<div class="new-user-panel panel">
    <h3>Dodaj nowego użytkownika</h3>
    <form action="add-user" method="post">
        <input type="hidden" asp-for="UserModel.SystemUserId" />
        <div class="form-group">
            <label asp-for="UserModel.UserName">Nazwa użytkownika:</label>
            <input class="form-control" asp-for="UserModel.UserName" />
        </div>
        <div class="form-group">
            <label asp-for="UserModel.Password">Hasło:</label>
            <input class="form-control" type="password" asp-for="UserModel.Password" />
        </div>
        <div class="form-group">
            <label asp-for="UserModel.ConfirmPassword">Powtórz hasło:</label>
            <input class="form-control" type="password" asp-for="UserModel.ConfirmPassword" />
        </div>
        <div class="form-group">
            <label asp-for="UserModel.FirstName">Imię:</label>
            <input class="form-control" asp-for="UserModel.FirstName" />
        </div>
        <div class="form-group">
            <label asp-for="UserModel.SecondName">Nazwisko:</label>
            <input class="form-control" asp-for="UserModel.SecondName" />
        </div>
        <div class="form-group">
            <label asp-for="UserModel.PhoneNumber">Numer kontaktowy:</label>
            <input class="form-control" asp-for="UserModel.PhoneNumber" />
        </div>
        <div class="form-group">
            <label asp-for="UserModel.Email">Adres email:</label>
            <input class="form-control" type="email" asp-for="UserModel.Email" />
        </div>
        <div class="form-group">
            <label asp-for="UserModel.Role">Typ użytkownika:</label>
            <select class="form-control" asp-for="UserModel.Role">
                @foreach (UserRoleTypes role in (UserRoleTypes[])Enum.GetValues(typeof(UserRoleTypes)))
                {
                    <option value="@role">@role.ToString()</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="UserModel.DepartmentID">Department:</label>
            <select class="form-control" asp-for="UserModel.DepartmentID">
                @foreach (Department department in Model.Departments)
                {
                    <option value="@department.ID">@department.Name</option>
                }
            </select>
        </div>
        <button class="btn add-user-button">Dodaj</button>

    </form>
    <form action="Users" method="get">
        <button class="btn">Powrót</button>
    </form>

</div>