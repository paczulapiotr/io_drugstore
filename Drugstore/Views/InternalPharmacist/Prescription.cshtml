@model PrescriptionViewModel
@{
    ViewData ["Title"] = "Prescription";
}

<div class="internal-prescription container panel">
    <div class="table-header">
        <h1>Prescription Details:</h1>
        <div class="buttons">
            <form asp-action="Index" method="get">
                <button class="btn">Powrót</button>
            </form>
            <form asp-action="Accept" method="post">
                <input type="hidden" name="prescriptionId" value="@Model.Id" />
                <button class="btn">Akceptuj</button>
            </form>
            <form asp-action="Reject" method="post">
                <input type="hidden" name="prescriptionId" value="@Model.Id" />
                <button class="btn">Odrzuć</button>
            </form>
        </div>
    </div>
    @await Html.PartialAsync("_PrescriptionTable", Model)
</div>